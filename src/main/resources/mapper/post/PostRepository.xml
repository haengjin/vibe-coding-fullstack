<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.vibeapp.post.PostRepository">

    <resultMap id="postResultMap" type="com.example.vibeapp.post.Post">
        <id property="no" column="no"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="views" column="views"/>
    </resultMap>

    <sql id="baseColumns">no, title, content, created_at, updated_at, views</sql>

    <select id="findAll" resultMap="postResultMap">
        SELECT <include refid="baseColumns"/>
        FROM posts
        ORDER BY no DESC
    </select>

    <select id="findPaged" resultMap="postResultMap">
        SELECT <include refid="baseColumns"/>
        FROM posts
        ORDER BY no DESC
        LIMIT #{size} OFFSET #{offset}
    </select>

    <select id="countAll" resultType="long">
        SELECT COUNT(*)
        FROM posts
    </select>

    <select id="findById" parameterType="long" resultMap="postResultMap">
        SELECT <include refid="baseColumns"/>
        FROM posts
        WHERE no = #{id}
    </select>

    <update id="increaseViews" parameterType="long">
        UPDATE posts
        SET views = views + 1
        WHERE no = #{id}
    </update>

    <insert id="save" parameterType="com.example.vibeapp.post.Post" useGeneratedKeys="true" keyProperty="no">
        INSERT INTO posts (title, content, created_at, updated_at, views)
        VALUES (#{title}, #{content}, #{createdAt}, #{updatedAt}, #{views})
    </insert>

    <update id="update" parameterType="com.example.vibeapp.post.Post">
        UPDATE posts
        SET title = #{title},
            content = #{content},
            updated_at = #{updatedAt}
        WHERE no = #{no}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM posts
        WHERE no = #{id}
    </delete>
</mapper>
