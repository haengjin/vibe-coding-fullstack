<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.vibeapp.post.PostTagRepository">

    <resultMap id="postTagResultMap" type="com.example.vibeapp.post.PostTag">
        <id property="id" column="id"/>
        <result property="postNo" column="post_no"/>
        <result property="tagName" column="tag_name"/>
    </resultMap>

    <insert id="addTag" parameterType="com.example.vibeapp.post.PostTag" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO POST_TAGS (POST_NO, TAG_NAME)
        VALUES (#{postNo}, #{tagName})
    </insert>

    <select id="findByPostNo" parameterType="long" resultMap="postTagResultMap">
        SELECT ID, POST_NO, TAG_NAME
        FROM POST_TAGS
        WHERE POST_NO = #{postNo}
        ORDER BY ID ASC
    </select>

    <delete id="deleteTagsByPostNo" parameterType="long">
        DELETE FROM POST_TAGS
        WHERE POST_NO = #{postNo}
    </delete>

    <delete id="deleteTag" parameterType="long">
        DELETE FROM POST_TAGS
        WHERE ID = #{id}
    </delete>
</mapper>
